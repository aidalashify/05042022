
  /* ============================================================================
    Custom Fonts for Boutiq App
    ----------------------------
    In case Boutiq is no longer installed on the online store, this file can be
    safely removed from the theme's assets list
  ============================================================================== */

  @font-face {
    font-family: "Graphik";
    src: url({{ "graphik-regular.woff" | asset_url }}) format("woff"), 
      url({{ "graphik-regular.woff2" | asset_url }}) format("woff2");
    font-weight: 400;
    font-style: normal;
  }

  @font-face {
    font-family: "Graphik";
    src: url({{ "graphik-medium.woff" | asset_url }}) format("woff"), 
      url({{ "graphik-medium.woff2" | asset_url }}) format("woff2");
    font-weight: 500;
    font-style: normal;
  }

  @font-face {
    font-family: "Graphik";
    src: url({{ "graphik-bold.woff" | asset_url }}) format("woff"), 
      url({{ "graphik-bold.woff2" | asset_url }}) format("woff2");
    font-weight: 600;
    font-style: normal;
  }
