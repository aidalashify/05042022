{{ 'two-column.css' | asset_url | stylesheet_tag }}

<main>
  
  <h1 class="custom-text-header header_newlines">
    {{ section.settings.custom_text_header}}
  </h1>

  
  {{ header_newlines | newline_to_br }}


<p class="custom_span_header">{{ section.settings.custom_text_span}}</p>

<div class="custom-text-section">
  

  <div class="one-half-column-left">
    <h2> {{ section.settings.custom_text_title-left }} </h2>
    <div>{{ section.settings.custom_text_body-left }}</div>
  </div>

  
 
    <div class="one-half-column-right">
      <h2> {{ section.settings.custom_text_title-right }} </h2>
    <div>{{ section.settings.custom_text_body-right }}</div>
    </div>
  
  <br style="clear:both;" />
  
 <!-- <hr style="border-color:#E6E6E6;  height: 0.5px!important;"/> -->

  
</div>


</main>




{% schema %}
  {
    "name": "Two Column",
    "settings": [
{
        "id": "custom_text_header",
        "type": "text",
        "label": "main heading",
        "default": "Title"
      },
{
        "id": "custom_text_span",
        "type": "text",
        "label": "span",
        "default": "span"
      },
      {
        "id": "custom_text_title-left",
        "type": "text",
        "label": "Text box heading",
        "default": "Title"
      },
      {
        "id": "custom_text_body-left",
        "type": "richtext",
        "label": "Add custom text below",
        "default": "<p>Add your text here</p>"
      },
   {
        "id": "custom_text_title-right",
        "type": "text",
        "label": "Text box heading",
        "default": "Title"
      },
      {
        "id": "custom_text_body-right",
        "type": "richtext",
        "label": "Add custom text below",
        "default": "<p>Add your text here</p>"
      }
    ],
 "presets": [
      {
      "name": "Two Column",
      "category": "ADVANCED LAYOUT"
      }
      ]
  }
{% endschema %}
